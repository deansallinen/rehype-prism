{
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "plugins": ["node"],
  "rules": {
    "node/no-unpublished-import": "off",
    "node/no-missing-require": ["error"]
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  }
}
